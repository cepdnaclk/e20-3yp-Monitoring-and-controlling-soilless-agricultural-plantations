    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/app/$1"
    }
  },
  "private": true,
  "expo": {
    "doctor": {
      "reactNativeDirectoryCheck": {
        "exclude": [
          "expo-barcode-scanner",
          "react-native-chart-kit",
          "react-native-snap-carousel"
        ],
        "listUnknownPackages": false
      }
    }
